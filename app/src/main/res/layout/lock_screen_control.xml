<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/clock_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="14pt"
                    android:shadowColor="#898989"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/clock_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="11pt"
                    android:shadowColor="#898989"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lockControl_bottom_area"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="0.42"
                android:layout_alignParentBottom="true"
                android:paddingBottom="35dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/adslide_but"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/but_ad_sideslide"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/native_content_frame"
                    android:layout_gravity="center"
                    android:background="@drawable/unlock_bg"
                    android:layout_width="330dp"
                    android:layout_height="140dp" />
                <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="120dp" -->
                <!--android:background="@android:color/transparent"-->


            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff">

    </ListView>


</android.support.v4.widget.DrawerLayout>